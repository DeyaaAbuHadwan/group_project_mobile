<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/burgerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bear Burger"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textColor="#FFF"
        android:background="#C5292B"
        />


    <ImageView
        android:id="@+id/imageburger"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/burgerText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="-11dp"
        android:src="@drawable/bearburger" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C5292B"
        android:id="@+id/desc"
        android:textSize="20sp"
        android:layout_below="@+id/imageburger"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="Nothing beats coming home from a long day at work or even an exhausting hunt and having a good burger. I’ve never met someone that didn’t like this ever so popular serving. They are easy to make, delicious, and just downright hit the spot."
        />

    <Button
        android:id="@+id/save"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:layout_alignStart="@+id/desc"
        android:layout_centerInParent="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/burgercustomrow"
        android:text="Save"
        android:textSize="30sp" />


</RelativeLayout>



